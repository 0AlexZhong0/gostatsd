# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[**]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[**.go]
indent_size = 1
indent_style = tab
tab_width = 8

[Makefile]
indent_size = 1
indent_style = tab
tab_width = 4

[**.{yml,yaml}]
indent_style = space
indent_size = 2
